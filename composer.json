{
    "name": "wearejust/kirby3-xmlsitemap",
    "type": "kirby-plugin",
    "description": "kirby3 plugin to generate an xml-based sitemap",
    "keywords": [
        "kirby3",
        "plugin",
        "sitemap"
    ],
    "version": "1.3.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Cees van Egmond",
            "email": "cees.vanegmond@wearejust.com"
        },
        {
            "name": "Sietse Veenman",
            "email": "sietse.veenman@wearejust.com"
        },
        {
            "name": "Duncan Pronk",
            "email": "duncan.pronk@wearejust.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "getkirby/composer-installer": "^1.1"
    },
    "require-dev": {
        "getkirby/cms": "^3.9.1"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "scripts": {
        "php-cs-fixer": [
            "@php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix"
        ]
    },
    "autoload": {
        "psr-4": {
            "Wearejust\\KirbyXMLSitemap\\": "src/"
        }
    }
}
